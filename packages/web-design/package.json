{
  "name": "@inkcre/web-design",
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.22.0",
  "description": "Design System for InKCre Web Projects",
  "main": "dist/index.js",
  "sass": "dist/styles/index.scss",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "sass": "./dist/styles/index.scss"
    },
    "./styles": {
      "sass": "./dist/styles/index.scss",
      "default": "./dist/styles/index.scss"
    },
    "./styles/functions": {
      "sass": "./dist/styles/_functions.scss"
    },
    "./styles/mixins": {
      "sass": "./dist/styles/_mixins.scss"
    },
    "./tokens/*": {
      "sass": "./dist/styles/tokens/*.scss"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm run clean && pnpm run build:tokens && pnpm run build:js && pnpm run build:styles",
    "build:js": "vite build",
    "build:tokens": "node ../../scripts/build-tokens.mjs",
    "build:styles": "rimraf dist/styles && cpr src/styles dist/styles -o",
    "clean": "rimraf dist",
    "preview": "vite preview",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "1.0.0-alpha.5",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^14.1.0",
    "cpr": "^3.0.1",
    "dayjs": "^1.11.19",
    "happy-dom": "^20.0.11",
    "histoire": "1.0.0-alpha.5",
    "rimraf": "^6.0.1",
    "sass": "^1.94.2",
    "style-dictionary": "^4.0.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "vue": "^3.4.0"
  },
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@vueuse/core": "^14.0.0",
    "dayjs": "^1.11.0",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vue-router": {
      "optional": true
    },
    "dayjs": {
      "optional": true
    },
    "@vueuse/core": {
      "optional": true
    },
    "@codemirror/autocomplete": {
      "optional": true
    },
    "@codemirror/commands": {
      "optional": true
    },
    "@codemirror/lang-json": {
      "optional": true
    },
    "@codemirror/state": {
      "optional": true
    },
    "@codemirror/view": {
      "optional": true
    }
  }
}
