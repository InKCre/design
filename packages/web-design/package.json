{
  "name": "@inkcre/web-design",
  "version": "1.2.0",
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "description": "Design System for InKCre Web Projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "sass": "styles/index.scss",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "sass": "./styles/index.scss",
      "style": "./dist/index.css",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": {
      "default": "./dist/index.css"
    },
    "./styles/functions": {
      "sass": "./styles/_functions.scss"
    },
    "./styles/mixins": {
      "sass": "./styles/_mixins.scss"
    },
    "./tokens/*": {
      "sass": "./styles/tokens/*.scss"
    },
    "./utils": {
      "import": "./dist/utils/index.js"
    },
    "./locales": {
      "import": "./dist/locales/index.js",
      "types": "./dist/locales/index.d.ts"
    }
  },
  "sideEffects": [
    "*.sass",
    "*.scss",
    "*.css",
    "*.vue"
  ],
  "files": [
    "dist/",
    "styles/",
    "CLAUDE_SKILL.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm run clean && pnpm run build:js && pnpm run build:locales && pnpm run build:skill",
    "build:js": "vite build",
    "build:locales": "vite build --config vite.locales.config.js",
    "build:tokens": "tsx ../../scripts/build-tokens.ts",
    "build:skill": "tsx ../../scripts/build-claude-skill.ts",
    "clean": "rimraf dist",
    "preview": "vite preview",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@histoire/plugin-vue": "1.0.0-alpha.5",
    "@iconify-json/mdi": "^1.2.3",
    "@unocss/preset-icons": "^66.5.10",
    "@unocss/preset-wind3": "^66.5.10",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^14.1.0",
    "cpr": "^3.0.1",
    "dayjs": "^1.11.19",
    "happy-dom": "^20.0.11",
    "histoire": "1.0.0-alpha.5",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.94.2",
    "unocss": "^66.5.10",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15",
    "vue": "^3.4.0",
    "vue-i18n": "^11.2.7",
    "vue-tsc": "^3.1.8"
  },
  "peerDependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lint": "^6.9.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@vueuse/core": "^14.0.0",
    "dayjs": "^1.11.0",
    "vscode-json-languageservice": "^5.6.4",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0"
  }
}
